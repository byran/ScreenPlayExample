	"version": "0.2.0",
	"configurations": [

		{
			"name": "Run in progress tests",
			"type":"python",
			"request":"launch",
			"module": "behave",
			"console": "integratedTerminal",
			"envFile": "${workspaceFolder}/debug.env",
			"cwd": "${workspaceFolder}/src",
			"args": [
				"-t",
				"inProgress"
			]
		},
		{
			"name": "Run all tests",
			"type":"python",
			"request":"launch",
			"module": "behave",
			"console": "integratedTerminal",
			"envFile": "${workspaceFolder}/debug.env",
			"cwd": "${workspaceFolder}/src"
		},
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		}
	]
}
